	            <span tooltip="${permissionList}">${role.key.name}</span>
	          </td>
	        </j:forEach>
	        <td class="stop" />
	      </tr>
	    </thead>
      <tr name="[USER:anonymous]" class="highlight-row">
        <local:userRow sid="anonymous" title="${%Anonymous}" type="${it.strategy.PROJECT}" permissionType="USER"/>
